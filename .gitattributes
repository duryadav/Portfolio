<script>
/* ===== CONFIG ===== */
const RESUME_LINK = '#'; // <-- Replace with your public resume URL (e.g., 'resume.pdf' if uploaded)

/* ===== Avatar load (tries local file path + filename fallbacks) ===== */
const avatar = document.getElementById('profileImg');
const candidates = [
  'file:///C:/Users/durge/Downloads/WhatsApp Image 2025-12-04 at 11.10.04_e110e02c.jpg',
  'WhatsApp Image 2025-12-04 at 11.10.04_e110e02c.jpg',
  'WhatsApp%20Image%202025-12-04%20at%2011.10.04_e110e02c.jpg',
  'photo.jpg',
  './photo.jpg'
];
function tryLoad(i=0){
  if(i>=candidates.length){ avatar.alt='photo not found'; return; }
  avatar.src = candidates[i];
  avatar.onload = ()=>{};
  avatar.onerror = ()=> tryLoad(i+1);
}
tryLoad();

/* ===== Smooth scrolling (nav + links) ===== */
document.querySelectorAll('[data-scroll]').forEach(a=>{
  a.addEventListener('click', e=>{
    e.preventDefault();
    const href = a.getAttribute('href') || '#' + a.dataset.scroll;
    const id = href.replace('#','');
    const el = document.getElementById(id);
    if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
  });
});
document.getElementById('viewProjectsBtn').addEventListener('click', ()=> document.getElementById('projects').scrollIntoView({behavior:'smooth'}));
document.getElementById('viewCase').addEventListener('click', ()=> document.getElementById('case').scrollIntoView({behavior:'smooth'}));

/* ===== Hero skill tags jump to Skills ===== */
document.querySelectorAll('.tag[data-skill]').forEach(t=>{
  t.addEventListener('click', ()=>{
    document.getElementById('skills').scrollIntoView({behavior:'smooth', block:'start'});
    // small highlight
    const name = t.dataset.skill.toLowerCase();
    const rows = Array.from(document.querySelectorAll('.skill-name')).filter(s=>s.textContent.toLowerCase().includes(name));
    if(rows.length) rows[0].parentElement.style.boxShadow = '0 8px 28px rgba(99,102,241,0.08)';
    setTimeout(()=> rows.forEach(r=> r.parentElement.style.boxShadow = ''), 1300);
  });
});

/* ===== Project modal ===== */
const projects = {
  player: {
    title:'Player Performance Dashboard',
    meta:'Power BI · Python · SQL',
    body:`<p class="muted"><strong>Summary:</strong> Built ETL + Power BI dashboard used in weekly coaching reviews — KPI cards, match filters and actionable fatigue flags.</p>
          <p class="muted"><strong>Responsibilities:</strong> Data cleaning, feature engineering, DAX measures & dashboard design.</p>
          <p class="muted"><strong>Impact:</strong> Reduced manual prep by ~60% and improved decision speed 3×.</p>`
  },
  village: {
    title:'Village Development System',
    meta:'Java · MySQL · Web',
    body:`<p class="muted">A web-based system to connect remote villages to services, implemented with Java, JDBC and MySQL.</p>`
  },
  restaurant: {
    title:'Restaurant Analytics',
    meta:'Frontend · Analytics',
    body:`<p class="muted">Reservation funnel analysis and dashboards for owners.</p>`
  }
};
const backdrop = document.getElementById('modalBackdrop');
const modalTitle = document.getElementById('modalTitle');
const modalMeta = document.getElementById('modalMeta');
const modalBody = document.getElementById('modalBody');
function openModal(key){
  const p = projects[key];
  if(!p) return;
  modalTitle.textContent = p.title;
  modalMeta.innerHTML = p.meta;
  modalBody.innerHTML = p.body;
  backdrop.classList.add('show');
  backdrop.setAttribute('aria-hidden','false');
}
function closeModal(){ backdrop.classList.remove('show'); backdrop.setAttribute('aria-hidden','true'); }
document.getElementById('modalClose').addEventListener('click', closeModal);
backdrop.addEventListener('click', (e)=> { if(e.target===backdrop) closeModal(); });
document.querySelectorAll('.project-card').forEach(card=>{
  card.addEventListener('click', ()=> openModal(card.dataset.project));
});

/* ===== animate skill meters ===== */
window.addEventListener('load', ()=>{
  document.querySelectorAll('.meter > i').forEach(i=>{
    const lvl = i.getAttribute('data-level') || '60%';
    setTimeout(()=> i.style.width = lvl, 180);
  });
});

/* ===== Theme toggle (icon) ===== */
const themeIcon = document.getElementById('themeIcon');
function setThemeIcon(t){
  themeIcon.innerHTML = t === 'light' ?
    '<circle cx=\"12\" cy=\"12\" r=\"4\"></circle><path d=\"M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41\"/>' :
    '<path d=\"M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z\"/>';
}
const saved = localStorage.getItem('portfolio-theme') || 'dark';
document.documentElement.setAttribute('data-theme', saved);
setThemeIcon(saved);
document.getElementById('themeToggle').addEventListener('click', ()=>{
  const cur = document.documentElement.getAttribute('data-theme') || 'dark';
  const next = cur === 'light' ? 'dark' : 'light';
  document.documentElement.setAttribute('data-theme', next);
  localStorage.setItem('portfolio-theme', next);
  setThemeIcon(next);
});

/* ===== Resume buttons ===== */
document.getElementById('resumeTop').addEventListener('click', ()=> {
  if(RESUME_LINK === '#'){ alert('Set RESUME_LINK variable in the HTML to your public resume link.'); return; }
  window.open(RESUME_LINK,'_blank');
});
document.getElementById('resumeBtn').addEventListener('click', ()=> {
  if(RESUME_LINK === '#'){ alert('Set RESUME_LINK variable in the HTML to your public resume link.'); return; }
  window.open(RESUME_LINK,'_blank');
});

/* ===== small reveal animations & set year ===== */
document.querySelectorAll('.fade-up').forEach((el,i)=> setTimeout(()=> el.classList.add('show'), 80 + i*80));
document.getElementById('year').textContent = new Date().getFullYear();
</script>
</body>
</html>

